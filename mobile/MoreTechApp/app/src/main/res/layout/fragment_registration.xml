<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/close_icon"
            android:id="@+id/close_dialog_auth"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/enter_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="32sp"
            android:textColor="#222"
            android:text="Придумайте логин и пароль"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Придумайте логин и пароль, чтобы зарегистрироваться"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="20sp"
            android:textColor="#222"
            android:id="@+id/subtitle_tv"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_login_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:hint="Логин"
            android:textColorHint="#000"
            android:textColor="#000"
            android:background="#fff">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textColorHint="#000"
                android:id="@+id/user_login"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:hint="Пароль"
            android:textColorHint="#000"
            app:passwordToggleEnabled="true"
            android:textColor="#000"
            android:background="#fff">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textColorHint="#000"
                android:inputType="textPassword"
                android:id="@+id/user_password"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_password_input_layout_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:hint="Повторите пароль"
            android:textColorHint="#000"
            android:textColor="#000"
            app:passwordToggleEnabled="true"
            android:background="#fff">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textColorHint="#000"
                android:inputType="textPassword"
                android:id="@+id/user_password_check"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:background="@drawable/btn_round"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:text="Зарегистрироваться"
            android:textColor="#FFF"
            android:id="@+id/continue_register"
            style="?android:attr/borderlessButtonStyle"/>

        <TextView
            android:id="@+id/register_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:text="Успешная регистрация"/>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            style="@style/Widget.MaterialComponents.ProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:indeterminate="true"
            app:indicatorColor="?attr/colorPrimary"
            android:id="@+id/progress_indicator_auth"/>

    </LinearLayout>
</layout>